{
  "name": "@ultrade/shared",
  "version": "1.0.9",
  "description": "This package contains shared code for the projects.",
  "exports": {
    "./browser/common/*": {
      "import": "./dist/browser/common/*.js",
      "types": "./dist/common/*.d.ts"
    },
    "./node/common/*": {
      "import": "./dist/node/common/*.js",
      "types": "./dist/common/*.d.ts",
      "require": "./dist/node/common/*.js"
    },
    "./browser/helpers/*": {
      "import": "./dist/browser/helpers/*.js",
      "types": "./dist/helpers/*.d.ts"
    },
    "./node/helpers/*": {
      "import": "./dist/node/helpers/*.js",
      "types": "./dist/helpers/*.d.ts",
      "require": "./dist/node/helpers/*.js"
    },
    "./browser/*": {
      "import": "./dist/browser/*/index.js",
      "types": "./dist/*/index.d.ts"
    },
    "./node/*": {
      "import": "./dist/node/*/index.js",
      "types": "./dist/*/index.d.ts",
      "require": "./dist/node/*/index.js"
    }
  },
  "scripts": {
    "build": "cross-env MODE=production ts-node esbuild.config.ts",
    "dev": "cross-env MODE=development ts-node esbuild.config.ts",
    "dev:node": "cross-env MODE=node-dev ts-node esbuild.config.ts",
    "dev:browser": "cross-env MODE=browser-dev ts-node esbuild.config.ts",
    "version:update": "npm version patch --no-git-tag-version"
  },
  
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/node": "^18.19.130",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.0",
    "esbuild-node-externals": "^1.20.1",
    "esbuild-plugin-d.ts": "^1.3.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.87.6",
    "algosdk": "^2.0.0",
    "bignumber.js": "^9.1.2",
    "bs58": "^5.0.0",
    "buffer": "^6.0.3",
    "crypto-js": "^4.1.1",
    "ethereumjs-util": "^7.1.5"
  }
}
